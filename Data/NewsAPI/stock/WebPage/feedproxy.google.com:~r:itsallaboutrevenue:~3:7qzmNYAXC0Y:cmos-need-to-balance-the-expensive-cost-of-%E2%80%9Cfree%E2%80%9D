        }
    }
    });
    
    // get the value of a cookie already set
    if(Togglebutton=="yes")
    {
        if( $.cookie('ORA_BLOGS_VISIT') == null) 
        {
            //  var ToggleSetting = 'yes,Grid';
            if(ToggleSetting=="List"){
                $('.cw36w1-wrapper').addClass("cw36w1-list");
                  listViewCharacters();
