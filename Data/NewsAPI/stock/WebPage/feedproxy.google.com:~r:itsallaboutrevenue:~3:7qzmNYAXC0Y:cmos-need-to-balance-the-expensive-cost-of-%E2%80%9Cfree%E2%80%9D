<script>
function getAllUrlParams(url) {
  var queryString = url ? url.split('?')[1] : window.location.search.slice(1);
  var obj = {};
  if (queryString) {
    queryString = queryString.split('#')[0];
    var arr = queryString.split('&');
    for (var i=0; i<arr.length; i++) {
      var a = arr[i].split('=');
      var paramNum = undefined;
      var paramName = a[0].replace(/\[\d*\]/, function(v) {
        paramNum = v.slice(1,-1);
        return '';
      });
      var paramValue = typeof(a[1])==='undefined' ? true : a[1];
      paramName = paramName.toLowerCase();
      paramValue = paramValue.toLowerCase();

      if (obj[paramName]) {
        if (typeof obj[paramName] === 'string') {
          obj[paramName] = [obj[paramName]];
        }
        if (typeof paramNum === 'undefined') {
          obj[paramName].push(paramValue);
        }
        else {
          obj[paramName][paramNum] = paramValue;
        }
      }
      else {
        obj[paramName] = paramValue;
      }
    }
  }

  return obj;
}
</script>

<script>
var input = [{
        domain: "go.oracle.com",
        attr: "src1"
    }, {
        domain: "myservices.us.oraclecloud.com",
        attr: "sourceType"
    }]
function extractHostname(url) {
    var hostname;
    //find & remove protocol (http, ftp, etc.) and get hostname

    if (url.indexOf("//") > -1) {
        hostname = url.split('/')[2];
    }
    else {
        hostname = url.split('/')[0];
    }

    //find & remove port number
    hostname = hostname.split(':')[0];
    //find & remove "?"
    hostname = hostname.split('?')[0];

    return hostname;
}

$(document).ready(function(){

        var BlogLinksTracking = 'NONE PROVIDED';
        var OffsitelinksTracking = 'NONE PROVIDED';
        var u;
        var SocialUrlTracking;
        var result = {};
        var arr = [];
        var storageName=sessionStorage.getItem("storageName")
        if(window.location.href.indexOf("go.oracle.com") > -1 && storageName==false){
        var blogUrlSourceValue=getAllUrlParams(window.location.href).src1;
        }
        else if(window.location.href.indexOf("myservices.us.oraclecloud.com") > -1 && storageName==false){
        var blogUrlSourceValue=getAllUrlParams(window.location.href).sourceType;
        }
        else{
            if(window.location.href.indexOf("source") > -1){
             var blogUrlSourceValue=getAllUrlParams(window.location.href).source;
            }
        }
        function sourceTracking(){
         $("a").each(function(i) {

          if(typeof($(".cb11v2-posturltracking a").eq(i).attr('name')) == 'undefined'){
                        if($(".cb11v2-posturltracking a").eq(i).attr("href") != undefined){
                           if ($(".cb11v2-posturltracking a").eq(i).attr("href").indexOf("blogs.oracle.com") > -1) {
                                if(BlogLinksTracking != 'NONE PROVIDED'){
                                    u =  $(".cb11v2-posturltracking a").eq(i).attr('name', 'cta='+BlogLinksTracking);
                                } 
                                else{
                                    u =  $(".cb11v2-posturltracking a").eq(i).attr('name', 'cta=Internal Link Click');
                                }
                            }
                            else{
                                if(OffsitelinksTracking != 'NONE PROVIDED'){
                                    u =  $(".cb11v2-posturltracking a").eq(i).attr('name', 'cta='+OffsitelinksTracking);
                                }  
                                else{
                                    u =  $(".cb11v2-posturltracking a").eq(i).attr('name', 'cta=External Link Click');
                                }
                            }
                        }
                    }
         
          if(blogUrlSourceValue){
               
            sessionStorage.setItem("storageName","false");
            if(blogUrlSourceValue.indexOf('+') != -1){
                var plusSplitString=blogUrlSourceValue.split('+');
                blogUrlSourceValue=plusSplitString[0]
            }
         var anchors = document.getElementsByTagName('a');
         
            if($("a").eq(i).attr("href") != undefined & $("a").eq(i).attr("href") != "#"){
            var url =$("a").eq(i).attr("href");
            for(j=0;j<input.length;j++){
                if(extractHostname(url) == input[j].domain){
                        if (url.match(/\?./)) {
                            var queryparams = url.split('?')[1];
                            var beforequeryparams = url.split('?')[0];
                            var params = queryparams.split('&');
                            var pair = null,
                               data = [];
                               let paramObj = {};
                            params.forEach(function(d) {
                               pair = d.split('=');
                              data.push({key: pair[0], value: pair[1]});
                               paramObj[pair[0]] = decodeURIComponent(pair[1]);
                               
                            });
                            var attr=input[j].attr;
                            if(Object.keys(paramObj).length>=1){
                                if(paramObj.hasOwnProperty(input[j].attr)){
                                paramObj[input[j].attr]=blogUrlSourceValue + encodeURI('+') + paramObj[input[j].attr];
                                }
                                else{
                                paramObj[Object.keys(paramObj)[Object.keys(paramObj).length - 1]]=paramObj[Object.keys(paramObj)[Object.keys(paramObj).length - 1]] + "&" + input[j].attr + "=" + blogUrlSourceValue
                                }
                            } 
                            var queryString = Object.keys(paramObj).map(key => key + '=' + paramObj[key]).join('&');
                            var newQueryString = beforequeryparams + "?" + queryString;
                            $("a").eq(i).attr('href', newQueryString);
                        }
                    else{
                        var newAttr = $("a").eq(i).attr("href") + "?" + input[j].attr + "=" + blogUrlSourceValue;
                        $("a").eq(i).attr('href', newAttr);
                        }
            }
            }
            if(extractHostname(url) !== "go.oracle.com" && extractHostname(url) !== "myservices.us.oraclecloud.com"){
                urlTracking();
            }
        function urlTracking(){
            if (url.match(/\?./)) {
            var queryparams = url.split('?')[1];
            var beforequeryparams = url.split('?')[0];
            var params = queryparams.split('&');
            var pair = null,
               data = [];
               let paramObj = {};
            params.forEach(function(d) {
               pair = d.split('=');
              data.push({key: pair[0], value: pair[1]});
               paramObj[pair[0]] = decodeURIComponent(pair[1]);
               
            });
            if(Object.keys(paramObj).length>=1){
                if(paramObj.hasOwnProperty("source")){
                paramObj.source=blogUrlSourceValue + encodeURI('+') + paramObj.source;
                }
                else{
                paramObj[Object.keys(paramObj)[Object.keys(paramObj).length - 1]]=paramObj[Object.keys(paramObj)[Object.keys(paramObj).length - 1]] + "&source=" + blogUrlSourceValue;
                }
            }
            var queryString = Object.keys(paramObj).map(key => key + '=' + paramObj[key]).join('&');
            var newQueryString = beforequeryparams + "?" + queryString;
            $("a").eq(i).attr('href', newQueryString);
        }
 
        else{
           var newAttr = $("a").eq(i).attr("href") + '?source=' + blogUrlSourceValue;
           $("a").eq(i).attr('href', newAttr);
           }
        }
        }
  
}
else{

}
});
}
sourceTracking();
 });
</script>


