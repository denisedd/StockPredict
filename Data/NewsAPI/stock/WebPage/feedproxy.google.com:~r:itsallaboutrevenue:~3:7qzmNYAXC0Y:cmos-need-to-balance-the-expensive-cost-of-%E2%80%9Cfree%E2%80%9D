        $(function(){
           $('div#selectionSharerPopover-inner ul li').click (function(e){
                if($('a', this).attr('class') == 'action tweet'){
                    SocialUrlTracking = $('a', this).attr('name', 'cta=Twitter Share');
                }else if($('a', this).attr('class') == 'action email'){
                    SocialUrlTracking = $('a', this).attr('name', 'cta=Email Share');
                }else{
                    SocialUrlTracking = $('a', this).attr('name', 'cta=Facebook Share');
                }
            });
            $('.cw51-socialsub ul li').click (function(e){
                if($('a', this).attr('class') == 'facebook-icon sharelink'){
                    SocialUrlTracking = $('a', this).attr('name', 'cta=Facebook Icon');
                }else if($('a', this).attr('class') == 'twitter-icon sharelink'){
                    SocialUrlTracking = $('a', this).attr('name', 'cta=Twitter Icon');
                }else if($('a', this).attr('class') == 'linkedin-icon sharelink'){
                    SocialUrlTracking = $('a', this).attr('name', 'cta=Linkedin Icon');
                }else if($('a', this).attr('class') == 'googleplus-icon sharelink'){
                    SocialUrlTracking = $('a', this).attr('name', 'cta=Googleplus Icon');
                }else if($('a', this).attr('class') == 'mail-icon sharelink'){
                    SocialUrlTracking = $('a', this).attr('name', 'cta=Mail Icon');
                }
            });
        });
    });    
    </script>
 

 
    <script>
        var Togglebutton='yes';
                var ToggleSetting='Grid';
                $(document).ready(function() {
                function previewGrid(){
                                var previewGrid = document.getElementsByClassName('preview-grid');
                                    for (var i = 0; i < previewGrid.length; i++) {
                                        previewGrid[i].style.display="block";
                                    }
                                  var previewList = document.getElementsByClassName('preview-list');
                                    for (var i = 0; i < previewList.length; i++) {
                                        previewList[i].style.display="none";
                                    }
                }
                function previewList(){
                                  var previewGrid = document.getElementsByClassName('preview-grid');
                                    for (var i = 0; i < previewGrid.length; i++) {
                                        previewGrid[i].style.display="none";
                                    }
                                  var previewList = document.getElementsByClassName('preview-list');
                                    for (var i = 0; i < previewList.length; i++) {
                                        previewList[i].style.display="block";
                                    }
                }
                var CookieValue = getCookie('ORA_BLOGS_VISIT'); 
                    if(CookieValue == 'List~MP05'){
                                    previewList();
                    }
                    if(CookieValue == 'Grid~MP05'){
                                previewGrid();
                    }
                    if( $.cookie('ORA_BLOGS_VISIT') == null) 
                            {
                                if(ToggleSetting=="List"){
                                    previewList();
                                }
                                else{
                                    previewGrid();
                                }
                                }
                                $(".cw36-list1").click(function() {
                                    previewList();
                            });
                            $(".cw36-grid1").click(function() {
                                previewGrid();
                            })
                    $(".button2 a").on("click", function(event) {
                        event.preventDefault();
                        var href = $(this).attr('href');
                        var clickedLink = $(this);
                       
                        $.ajax({
                            url: href,
                            dataType: "html",
                            accepts: "text/html",
                            type: "GET",
                            headers: {
                                "X-Requested-With": "Oracle Ajax"
                            },
                        }).done(function(html) {

                           var CookieValue = getCookie('ORA_BLOGS_VISIT'); 
                           if(CookieValue == 'List~MP05'){
                                var items = $(html).find(".cw36w0").html();
                     
                                  $('.cw36w0').append(items);
                                  $('.cw36w1-wrapper').addClass("cw36w1-list");
                                    previewList();
                                  $(".f15w2 .oracle-pagination--loadmore").find('li:first').remove();
                                  
                            }else if(CookieValue == 'Grid~MP05'){
                                  var items = $(html).find(".cw36w0").html();
                                
                                  $('.cw36w0').append(items);
                                  $('.cw36w1-wrapper').addClass("cw36w1");
                                  previewGrid();
                                  $(".f15w2 .oracle-pagination--loadmore").find('li:first').remove();
                                  
                            }
                            if( $.cookie('ORA_BLOGS_VISIT') == null) 
                            {
                                if(ToggleSetting=="List"){
                                  var items = $(html).find(".cw36w0").html();
                                  
                                  $('.cw36w0').append(items);
                                  $('.cw36w1-wrapper').addClass("cw36w1-list");
                                   previewList();
                                  $(".f15w2 .oracle-pagination--loadmore").find('li:first').remove();
                                  
                                }else if(ToggleSetting=="Grid"){
                                    var items = $(html).find(".cw36w0").html();
                                    
                                    $('.cw36w0').append(items);
                                    $('.cw36w1-wrapper').addClass("cw36w1");
                                    previewGrid();
                                    $(".f15w2 .oracle-pagination--loadmore").find('li:first').remove();
                                  
                                }else if(ToggleSetting==""){
                                var items = $(html).find(".cw36w0").html();
                                $('.cw36w0').append(items);
                                $('.cw36w1-wrapper').addClass("cw36w1-list");
                                   previewList();
                                  $(".f15w2 .oracle-pagination--loadmore").find('li:first').remove();
                                }
                            }
                            $(".cw36-list1").click(function() {
                            previewList();
                            });
                            $(".cw36-grid1").click(function() {
                            previewGrid();
                            })
                        })
                    })
                });
                </script>


