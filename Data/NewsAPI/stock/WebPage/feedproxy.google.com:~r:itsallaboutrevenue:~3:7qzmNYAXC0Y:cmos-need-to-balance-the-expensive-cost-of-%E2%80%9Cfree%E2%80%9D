<script type="text/javascript">
function getCookie(w){
	cName = "";
	pCOOKIES = new Array();
	pCOOKIES = document.cookie.split('; ');
	for(bb = 0; bb < pCOOKIES.length; bb++){
		NmeVal  = new Array();
		NmeVal  = pCOOKIES[bb].split('=');
		if(NmeVal[0] == w){
			cName = decodeURI(NmeVal[1]);
		}
	}
	return cName;
}

function printCookies(w){
	cStr = "";
	pCOOKIES = new Array();
	pCOOKIES = document.cookie.split('; ');
	for(bb = 0; bb < pCOOKIES.length; bb++){
		NmeVal  = new Array();
		NmeVal  = pCOOKIES[bb].split('=');
		if(NmeVal[0]){
			cStr += NmeVal[0] + '=' + decodeURI(NmeVal[1]) + '; ';
		}
	}
	return cStr;
}

function setCookie(name, value, expires,path){
cookieStr = name + "=" + encodeURI(value) + "; ";
if(expires){
		expires = setExpiration(expires);
		cookieStr += "expires=" + expires + "; ";
	}
if(path){
		cookieStr += "path=" + path + "; ";
	}
	document.cookie = cookieStr;
}
function setExpiration(cookieLife){
    var today = new Date();
    var expr = new Date(today.getTime() + cookieLife * 24 * 60 * 60 * 1000);
    return  expr.toGMTString();
}
// -->
</script>
 
<script type="text/javascript">
 function gridViewCharacters(){
            for(i=0;i<formData.length;i++){
                    var dup_myFormData1 = formData.slice();
                    if(dup_myFormData1[i].length<160){
                        document.getElementsByClassName("preview")[i].innerHTML = dup_myFormData1[i];
                    }
                    else{
                        document.getElementsByClassName("preview")[i].innerHTML = dup_myFormData1[i].substring(0, 160)+"...";
                         
                        
                    }
            }
        }
        function listViewCharacters(){
                    for(i=0;i<formData.length;i++){
                        var dup_myFormData1 = formData.slice();
                        
                        if(dup_myFormData1[i].length<480){
                            document.getElementsByClassName("preview")[i].innerHTML = dup_myFormData1[i];
                        }
                        else{
                            
                            document.getElementsByClassName("preview")[i].innerHTML = dup_myFormData1[i].substring(0, 480)+"...";
                           
                        }
                    }
        }
formData=[];
    var Togglebutton='yes';
    var ToggleSetting='Grid';
    $("#cw36-list").click(function() {
