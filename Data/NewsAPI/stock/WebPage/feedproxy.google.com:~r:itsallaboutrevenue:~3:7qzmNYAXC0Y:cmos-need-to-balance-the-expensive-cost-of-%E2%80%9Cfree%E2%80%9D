<script>
           $(document).ready(function(){
           var i=0;
           $(".cw36w4").each(function(){
               var divHeight = document.getElementsByClassName('cw36w6v5-previewcopy-id')[i].offsetHeight;
              var lineHeight = $('.cw36w6v5-previewcopy-id').css('line-height');
             lineHeight = parseFloat(lineHeight)
             var lines = Math.round(divHeight / lineHeight);
           if(lines==4){
           document.getElementsByClassName("cw36w6v5-previewcopy")[i].innerHTML=document.getElementsByClassName("cw36w6v5-previewcopy")[i].innerHTML.substring(0,100)+"...";
          
           }
            if(lines==5){
           document.getElementsByClassName("cw36w6v5-previewcopy")[i].innerHTML=document.getElementsByClassName("cw36w6v5-previewcopy")[i].innerHTML.substring(0,60)+"...";
           }
           if(lines==6 || lines>6){
           document.getElementsByClassName("cw36w6v5-previewcopy")[i].innerHTML=document.getElementsByClassName("cw36w6v5-previewcopy")[i].innerHTML.substring(0,35)+"...";
           }
           i++;
           });
           });
