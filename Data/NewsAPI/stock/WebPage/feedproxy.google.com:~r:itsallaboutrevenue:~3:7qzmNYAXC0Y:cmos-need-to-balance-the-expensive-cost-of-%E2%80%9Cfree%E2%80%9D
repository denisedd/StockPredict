            else if( ToggleSetting=="Grid" || ToggleSetting == "NONE PROVIDED" || ToggleSetting == "" ){
                    $('.cw36w1-wrapper').addClass("cw36w1");
                    gridViewCharacters();
                }     
        }
        else{
            cookieValue = getCookie('ORA_BLOGS_VISIT');
