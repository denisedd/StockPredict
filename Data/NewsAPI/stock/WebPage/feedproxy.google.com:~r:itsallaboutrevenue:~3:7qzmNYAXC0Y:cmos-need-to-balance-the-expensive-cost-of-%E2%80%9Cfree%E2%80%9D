    if( $.cookie('ORA_BLOGS_VISIT') == null || Togglebutton=="no") {
        if(ToggleSetting=="List"){
            $('.cw36w1-wrapper').addClass("cw36w1-list");
                  listViewCharacters();
        }
        else if( ToggleSetting=="Grid" || ToggleSetting == "NONE PROVIDED" || ToggleSetting == ""){
            $('.cw36w1-wrapper').addClass("cw36w1");
                  listViewCharacters();
        }
    }
    if( $.cookie('ORA_BLOGS_VISIT') == 'List~MP05' ) {
        $('.cw36w1-wrapper').addClass("cw36w1-list");
                  listViewCharacters();
    }
    if( $.cookie('ORA_BLOGS_VISIT') == 'Grid~MP05' ) {
        $('.cw36w1-wrapper').addClass("cw36w1");
                  listViewCharacters();
